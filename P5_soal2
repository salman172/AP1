#include <iostream>

using namespace std;

int main(){
    int kode_hari;

    cout<<"1. Senin"<<endl;
    cout<<"2. Selasa"<<endl;
    cout<<"3. Rabu"<<endl;
    cout<<"4. Kamis"<<endl;
    cout<<"5. Jumat"<<endl;
    cout<<"6. Sabtu"<<endl;
    cout<<"7. Minggu"<<endl;
    cout<<endl<<"Pilih Hari : ";
    cin>>kode_hari;

    switch(kode_hari){
    case 1:
        cout<<endl<<"Anda memilih hari ";
        cout<<"Senin"<<endl;
        break;
    case 2:
        cout<<endl<<"Anda memilih hari ";
        cout<<"Selasa"<<endl;
        break;
    case 3:
        cout<<endl<<"Anda memilih hari ";
        cout<<"Rabu"<<endl;
        break;
    case 4:
        cout<<endl<<"Anda memilih hari ";
        cout<<"Kamis"<<endl;
        break;
    case 5:
        cout<<endl<<"Anda memilih hari ";
        cout<<"Jumat"<<endl;
        break;
    case 6:
        cout<<endl<<"Anda memilih hari ";
        cout<<"Sabtu"<<endl;
        break;
    case 7:
        cout<<endl<<"Anda memilih hari ";
        cout<<"Minggu"<<endl;
        break;
    default :
        cout<<endl<<"Tidak ada pilihan"<<endl;

    }

return 0;
}
